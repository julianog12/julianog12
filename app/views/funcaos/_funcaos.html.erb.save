<h2><center>Resultado</center></h2>
<table class="pretty"> <!--table table-striped-->
<thead>
   <tr>
     <th><%= sortable "cd_componente", "Componente" %></th>
     <th><%= sortable "nm_funcao", "Nome Função" %></th>
     <th><%= sortable "tipo", "Tipo" %></th>
     <th colspan="3"></th>
   </tr>
</thead>
<tbody>
    <% @funcaos.each do |funcao| %>
         <tr>
               <td><%= funcao.cd_componente %></td>
               <td><%= funcao.nm_funcao %></td>
               <td><%= funcao.tipo %></td>
         </tr>
     <% end %>
</tbody>
</table>
