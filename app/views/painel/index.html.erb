$(function() {
			// mouse-on example
			var mouseOnDiv = $('#mouseon-datas div');
			var tipContent = $(
				'<p><b>Use as Datas Inicial e Final para mostrar o gr√°fico de "Total Componentes Atualizados/DIA".</b></p>'
			);
			mouseOnDiv.data('powertipjq', tipContent);
			mouseOnDiv.powerTip({
				placement: 'e',
				mouseOnToPopup: true
			});
		});
</script>